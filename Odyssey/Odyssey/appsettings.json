{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AuthenticationSettings": {
    "CookieName": "Odyssey.Authentication",
    "HttpOnly": true,
    "Secure": true,
    "SameSite": "Strict",
    "ExpireTimeSpanDays": 30,
    "SlidingExpiration": true,
    "Origins": [ "https://odyssey.haondt.dev" ]
  },
  "RouteSettings": {
    "BasePath": ""
  },
  "AdminSettings": {
    "RegisterDefaultAdminUser": false,
    "DefaultAdminUsername": null,
    "DefaultAdminPassword": null
  },
  "ClusterSettings": {
    "ClusterId": "default",
    "ServiceId": "default",
    "UseLocalhostClustering": false
  },
  "PersistenceSettings": {
    "DatabaseSettings": {
      "Driver": "Postgres",
      "DropDatabaseOnStartup": false,
      "Postgres": {
        "Port": 5432,
        "Host": "localhost",
        "Database": "odyssey",
        "Username": null,
        "Password": null
      }
    },
    "BlobStorageSettings": {
      "Driver": "Filesystem",
      "FileSystem": {
        "BasePath": "/data/blobs"
      }
    }
  },
  "UISettings": {
    "ShowDetailedCatchAllExceptions": false
  }
}

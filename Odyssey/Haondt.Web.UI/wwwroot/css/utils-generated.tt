<#@ template debug="false" hostspecific="false" language="C#" #>
<#@ assembly name="System.Core" #>
<#@ import namespace="System.Linq" #>
<#@ import namespace="System.Text" #>
<#@ import namespace="System.Collections.Generic" #>
<#@ output extension=".css" #>
<#
	var spacingMultipliers = new List<string>
	{
		"2xs", "xs", "s", "m", "l", "xl", "2xl"
	}
	.Select(q => (q, $"calc(var(--haondt-ui-spacing-multiplier-{q}) * var(--haondt-ui-spacing-base))"))
	.Append(("0", "0"))
	.Append(("panel", "var(--haondt-ui-panel-spacing)"))
	.Append(("card", "var(--haondt-ui-card-spacing)"))
	.Append(("line", "var(--haondt-ui-line-spacing)"))
	.ToList();

	foreach(var (paddingType, prefix) in new List<(string, string)> { ("margin", "m"), ("padding", "p") })
	{
		var localSpacingMultipliers = spacingMultipliers.ToList();
		if (paddingType == "margin") 
		{
			localSpacingMultipliers.Add(("auto", "auto"));
		}
		foreach(var (paddingSubtypes, suffix) in new List<(List<string>, string)>
		{
			([""], ""),
			(["-left"], "l"),
			(["-right"], "r"),
			(["-top"], "t"),
			(["-bottom"], "b"),
			(["-left", "-right"], "x"),
			(["-top", "-bottom"], "y"),
		})
		{
#>
<#
			foreach(var (name, spacingMultiplier) in localSpacingMultipliers)
			{
#>
.<#Write(prefix);Write(suffix);#>-<#Write(name);#> {
<#				foreach(var paddingSubtype in paddingSubtypes)
				{
#>
	<#Write(paddingType);Write(paddingSubtype);#>: <#Write(spacingMultiplier);#> !important;
<#
				}
#>
}
<#
			}
		}
	}
#>

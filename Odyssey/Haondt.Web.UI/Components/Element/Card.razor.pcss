.card {
    padding: var(--haondt-ui-card-padding);
    border-radius: var(--haondt-ui-card-border-radius);
    border: 1px solid var(--haondt-ui-color-border);
    transition: border-color 0.5s ease;
}

.card-clickable {
    cursor: pointer;
    pointer-events: all;
}
.card-clickable:hover {
    border: 1px solid var(--haondt-ui-color-accent);
    transition-duration: initial;
}
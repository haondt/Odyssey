#modal-background {
    position: absolute;
    inset: 0;
    background-color: rgba(0,0,0,0.5);
}
#modal-content {
    background: var(--haondt-ui-color-background);
    border-radius: var(--haondt-ui-border-radius);
    position: relative;
    padding: var(--haondt-ui-card-spacing);
    width: 100%;
}

#modal-content.modal-panel-form {
    max-width: var(--haondt-ui-modal-width-m);
}

#modal-content.modal-panel-dialog {
    max-width: var(--haondt-ui-modal-width-s);
}

@media (--haondt-ui-media-query-lte-s) {
    #modal-content {
        padding: var(--haondt-ui-card-spacing);
    }
}